    margin-bottom: 10px;
    padding: 10px;
    border-radius: 5px;
    background-color: #f0f0f0;
    transition: background-color 0.3s ease;
}

.task:hover {
    background-color: #e0e0e0;
}

.task.fade-out {
    opacity: 0;
    transition: opacity 0.3s ease;
}

.edit-mode {
    display: none;
}

.edit-mode input[type="text"] {
    width: calc(100% - 60px);
    float: left;
    margin-right: 10px;
}

.edit-mode button {
    float: right;
}

