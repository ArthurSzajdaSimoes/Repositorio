<body>
<div class="container">
    <h1>Lista de Tarefas</h1>
    <input type="text" id="taskInput" placeholder="Adicionar uma nova tarefa" onkeydown="if (event.keyCode === 13) addTask()">
    <button onclick="addTask()" class="add-button">Adicionar Tarefa</button>
    <div id="taskList"></div>
</div>
<script>
function addTask() {
    let taskInput = document.getElementById("taskInput").value.trim();
    if (taskInput === "") {
        alert("Por favor, insira uma tarefa!");
        return;
    }
    
    let taskList = document.getElementById("taskList");
    let newTask = document.createElement("div");
    newTask.className = "task";
    
    let taskText = document.createElement("span");
    taskText.textContent = taskInput;
    
    let editInput = document.createElement("input");
    editInput.type = "text";
    editInput.className = "edit-mode";
    editInput.style.display = "none";
    
    let editButton = document.createElement("button");
    editButton.textContent = "Editar";
    editButton.className = "edit-button";
    editButton.onclick = function() {
        toggleEditMode(newTask);
    };
    
    let deleteButton = document.createElement("button");
    deleteButton.textContent = "Excluir";
    deleteButton.className = "delete-button";
    deleteButton.onclick = function() {
        deleteTask(newTask);
    };
    
    newTask.appendChild(taskText);
    newTask.appendChild(editInput);
    newTask.appendChild(editButton);
    newTask.appendChild(deleteButton);
    
    taskList.appendChild(newTask);
    
    document.getElementById("taskInput").value = "";
}

function toggleEditMode(task) {
    let taskText = task.querySelector("span");
    let editInput = task.querySelector("input");
    
    taskText.style.display = "none";
    editInput.style.display = "inline-block";
    editInput.value = taskText.textContent;
    
    editInput.focus();
    
    editInput.addEventListener("keyup", function(event) {
        if (event.keyCode === 13) {
            event.preventDefault();
            taskText.textContent = editInput.value;
            taskText.style.display = "inline-block";
            editInput.style.display = "none";
        }
    });
}

function deleteTask(task) {
    task.classList.add("fade-out");
    setTimeout(function() {
        task.parentNode.removeChild(task);
    }, 150); // Tempo da transição em milissegundos
}
</script>
</body>
</html>
